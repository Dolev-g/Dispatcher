<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.example.dispatcher.presentation.search.view.SearchView
    android:id="@+id/searchView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/recentSearchesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="10dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/textViewHomeFragment"
            style="@style/recentSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RecentSearch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

            <Button
                android:id="@+id/clearButton"
                android:layout_width="55dp"
                android:layout_height="33dp"
                android:background="@color/clear_btn"
                android:text="@string/clear"
                android:textSize="12sp"
                android:textColor="@color/sort_by"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/resultsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.dispatcher.presentation.common.view.FilterView
            android:id="@+id/filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewHomeFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/filter"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
