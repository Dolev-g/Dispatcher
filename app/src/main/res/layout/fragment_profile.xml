<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textViewProfileFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, this is a simple home fragment!"
        android:textSize="18sp"
        android:textColor="#000000" />

    <!-- EditText for entering a new article title -->
    <EditText
        android:id="@+id/addAuthorEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter article title" />

    <!-- Button to save the new article -->
    <Button
        android:id="@+id/buttonSaveAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save" />

</LinearLayout>