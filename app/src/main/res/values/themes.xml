<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Dispatcher" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="headlineAuth">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/headlineAuthColor</item>
    </style>


        <style name="inputTextBox">
            <item name="android:layout_width">match_parent</item>
            <item name="android:layout_height">44dp</item>
            <item name="android:paddingStart">16dp</item>
            <item name="android:paddingEnd">12dp</item>
            <item name="android:textColor">@color/headlineAuthColor</item>
            <item name="android:background">@drawable/edittext_border</item>
        </style>

    <style name="PrimaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@drawable/primary_button_background</item>
        <item name="android:layout_marginTop">79dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textColor">@color/colorMainText</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SecondaryButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@drawable/sec_button_background</item>
        <item name="android:layout_marginTop">79dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textColor">@color/headlineAuthColor</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="cardTitle" >
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">21.09sp</item>
        <item name="android:textColor">@color/card_title</item>
    </style>

    <style name="cardAuthor" >
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">22px</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textColor">@color/card_author</item>
    </style>

    <style name="cardBody" >
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/headlineAuthColor</item>
    </style>

    <style name="homeTitle" >
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">32sp</item>
        <item name="android:textColor">@color/home_title</item>
    </style>

    <style name="searchBox" >
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">22sp</item>
        <item name="android:textColor">@color/search_hint</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="searchBoxResult" >
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">22sp</item>
        <item name="android:textColor">@color/search_hint</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="sortBy" >
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">22sp</item>
        <item name="android:textColor">@color/sort_by</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="recentSearch" >
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">22sp</item>
        <item name="android:textColor">@color/sort_by</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="filterTitle" >
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingExtra">22sp</item>
        <item name="android:textColor">@color/sort_by</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

</resources>
